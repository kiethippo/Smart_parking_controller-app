<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TicketFragment"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_top"
        android:orientation="vertical">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/github_icon"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:elevation="4dp"
                android:textSize="30sp"
                android:padding="15dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USER"
                android:textColor="#4091AE"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="3dp"
                android:padding="15dp"
                android:textAlignment="center"/>
        </RelativeLayout>

    </LinearLayout>

    <!--CAR NUMBER AND EMAIL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="22dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CAR NUMBER:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/popup_bg"
            android:backgroundTint="#D9D9D9"
            android:hint="Enter Your Car Number..."
            android:textColor="@color/black"
            android:textColorHint="#9C9C9C"
            android:textSize="20sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EMAIL:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/popup_bg"
            android:backgroundTint="#D9D9D9"
            android:hint="Enter Your Email..."
            android:textColor="@color/black"
            android:textColorHint="#9C9C9C"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="20dp"
        >
        <CheckBox
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:buttonTint="#2B6E68"
            android:background="@drawable/popup_bg"
            android:backgroundTint="#D9D9D9"
            android:padding="8dp"
            android:button="null"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/check_ok"

            />
        <TextView
            android:text ="1 MONTH"
            android:textColor="#2B6E68"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="20dp"
        >
        <CheckBox
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:buttonTint="#2B6E68"
            android:background="@drawable/popup_bg"
            android:backgroundTint="#D9D9D9"
            android:padding="8dp"
            android:button="null"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/check_ok"

            />
        <TextView
            android:text ="6 MONTHS"
            android:textColor="#2B6E68"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="20dp"
        >
        <CheckBox
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:buttonTint="#2B6E68"
            android:background="@drawable/popup_bg"
            android:backgroundTint="#D9D9D9"
            android:padding="8dp"
            android:button="null"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/check_ok"

            />
        <TextView
            android:text ="1 YEAR"
            android:textColor="#2B6E68"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:backgroundTint="#2B6E68"
            android:text="SEND"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"

            >
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
